<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title"
    tools:context=".PayActivity">


    <TextView
        android:id="@+id/textViewMovieName"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Tên phim"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewCinemaName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCinemaName"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Tên rạp phim"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTimeSlot"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewTimeSlot"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Khung giờ"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Số lượng ghế đã đặt"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSeatNumber"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSeatNumber"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Số ghế"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPrice"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="176dp"
        android:gravity="center_vertical"
        android:text="Giá tiền"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginBottom="176dp"
        android:gravity="center_vertical"
        android:text="Giá tiền:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:text="Hóa đơn"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewMovieName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Tên phim:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/textViewMovieName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Rạp phim:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/textViewCinemaName"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Khung giờ:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/textViewTimeSlot"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Số lượng ghế:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textViewQuantity"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:text="Số ghế:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/textViewSeatNumber"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />

    <Button
        android:id="@+id/btnconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="Hoàn tất"
        android:backgroundTint="@color/blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InvalidId" />


</androidx.constraintlayout.widget.ConstraintLayout>